<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_step3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cyclers.soil.PDFActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/Edit_Views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sc_header" />

                <LinearLayout
                    android:layout_width="820dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="-20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_black_orange"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="Client Details"
                            android:textColor="#fff"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_black_white"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text="Client name"
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text=""
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text="Job name"
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text=""
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_black_white"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text="Quantity"
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text=""
                            android:textColor="@color/textColor"

                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text="Ameliorants"
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text=""
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_black_white"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp">

                        <CheckBox
                            android:id="@+id/check1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clickable="false"
                            android:text="I am the authorised client representative."
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <CheckBox
                            android:id="@+id/check2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clickable="false"
                            android:text="I have been given the opportunity to take my own measurements of the twin steer tip truck reg# 924 XKF. I agree that the measurements for the bin are: 2.28 (W) x 4.28 (L) x 1m (H) (excluding hoist which is inside the bin)  which equals a total volume of 9.75m3."
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <CheckBox
                            android:id="@+id/check3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clickable="false"
                            android:text="I have been given the opportunity to do test measurements using another truck reg # ________. I agree that the measurements for the bin are: ___________________________________ which equals a total volume of ____________."
                            android:textColor="@color/textColor"
                            android:textSize="18dp" />

                        <CheckBox
                            android:id="@+id/check4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clickable="false"
                            android:text="I have been given the opportunity to view up to three test measurements and I am satisfied that the measurements accurately reflect an uncompacted meterage rate."
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <CheckBox
                            android:id="@+id/check5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clickable="false"
                            android:text="I understand that screened stockpiles not used immediately will compact under their own weight. I also understand that exposure to wind and rain can significantly reduce the size of my stockpiles."
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <CheckBox
                            android:id="@+id/check6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clickable="false"
                            android:text="  It was too wet to safely do test measurements but I am satisfied that the measurements are accurate."
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_black_orange"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="Customer Sign-Off"
                            android:textColor="#fff"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_black_white"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/text9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text="Signature:"
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/border_black_white">

                            <ImageView
                                android:id="@+id/signature_box"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:src="@drawable/signature_image" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text="Date:"
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text=""
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_black_white"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/text13"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text="Name:"
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text14"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text=""
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text15"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text="Position:"
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text16"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/border_black_white"
                            android:padding="15dp"
                            android:text=""
                            android:textColor="@color/textColor"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:src="@drawable/sc_footer" />
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_drawable"
            android:onClick="onPrevClick"
            android:text="BACK" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_drawable"
            android:onClick="onNextClick"
            android:text="CONFIRM" />
    </LinearLayout>
</RelativeLayout>
